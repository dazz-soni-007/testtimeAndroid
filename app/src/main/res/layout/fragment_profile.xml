<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_bg">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/margin100"
        android:layout_height="@dimen/margin100"
        android:src="@drawable/profilepics"
        app:civ_border_width="@dimen/margin1"
        android:elevation="@dimen/margin20"
        app:civ_border_color="@color/civ_bordercolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin40"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/profile_card_layout"
        android:layout_marginTop="@dimen/margin80"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:layout_marginBottom="@dimen/margin5">

        <LinearLayout
            android:layout_width="@dimen/margin300"
            android:layout_height="@dimen/margin100"
            android:weightSum="3"
            android:background="@drawable/profile_grdient">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cardimg"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:background="@drawable/history"
                    android:backgroundTint="@color/white"
                    android:layout_width="@dimen/margin25"
                    android:layout_height="@dimen/margin25"></ImageView>
                <TextView
                    android:id="@+id/sub_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="@string/points"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserratregular"></TextView>
                <TextView
                    android:id="@+id/points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin3"
                    android:text="13"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserratregular"></TextView>
            </LinearLayout>
            <View
                android:layout_width="@dimen/margin1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin18"
                android:layout_marginBottom="@dimen/margin18"
                android:background="@color/white"></View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/rankimg"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:background="@drawable/subscription"
                    android:backgroundTint="@color/white"
                    android:layout_width="@dimen/margin25"
                    android:layout_height="@dimen/margin25"></ImageView>
                <TextView
                    android:id="@+id/rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="@string/rank"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserratregular"></TextView>
                <TextView
                    android:id="@+id/rankpt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin3"
                    android:text="10"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserratregular"></TextView>
            </LinearLayout>
            <View
                android:layout_width="@dimen/margin1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin18"
                android:layout_marginBottom="@dimen/margin18"
                android:background="@color/white"></View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/scoreimg"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:background="@drawable/history"
                    android:backgroundTint="@color/white"
                    android:layout_width="@dimen/margin25"
                    android:layout_height="@dimen/margin25"></ImageView>
                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="@string/score"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserratregular"></TextView>
                <TextView
                    android:id="@+id/scorept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin3"
                    android:text="85%"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserratregular"></TextView>
            </LinearLayout>
        </LinearLayout>


        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/margin300"
            android:layout_height="@dimen/margin50"
            android:layout_marginTop="@dimen/margin20"
            android:background="@drawable/edit_box"
            android:fontFamily="@font/montserratregular"
            android:gravity="center_vertical"
            android:hint="@string/fullnametxt"
            android:paddingLeft="@dimen/margin10"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textSize="16sp"></EditText>

        <EditText
            android:id="@+id/email"
            android:layout_width="@dimen/margin300"
            android:layout_height="@dimen/margin50"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/edit_box"
            android:fontFamily="@font/montserratregular"
            android:gravity="center_vertical"
            android:hint="@string/emailadresstxt"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/margin10"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textSize="16sp"></EditText>

        <EditText
            android:id="@+id/mobile"
            android:layout_width="@dimen/margin300"
            android:layout_height="@dimen/margin50"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/edit_box"
            android:fontFamily="@font/montserratregular"
            android:gravity="center_vertical"
            android:hint="@string/mobiletxt"
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="@dimen/margin10"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textSize="16sp"></EditText>

        <Spinner
            android:id="@+id/language"
            android:layout_width="@dimen/margin300"
            android:layout_height="@dimen/margin50"
            android:layout_marginTop="@dimen/margin6"
            android:background="@drawable/selector_spinner" />

        <Spinner
            android:id="@+id/classname"
            android:layout_width="@dimen/margin300"
            android:layout_height="@dimen/margin50"
            android:layout_marginTop="@dimen/margin6"
            android:background="@drawable/selector_spinner" />

        <Spinner
            android:id="@+id/gender"
            android:layout_width="@dimen/margin300"
            android:layout_height="@dimen/margin50"
            android:layout_marginTop="@dimen/margin6"
            android:background="@drawable/selector_spinner" />
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>